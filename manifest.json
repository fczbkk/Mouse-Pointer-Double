{
  "name": "Mouse Pointer Double",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Displays copy of the mouse pointer on the page. Intended for use with Chromecast.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_title": "Show cursor double",
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "cursor1.png"
  ]
}